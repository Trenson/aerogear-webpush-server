            </activation>
            <properties>
                <maven.javadoc.failOnError>false</maven.javadoc.failOnError>
                <!-- npn-boot does not work with JDK 8 -->
                <jetty.alpn.version>8.1.0.v20141016</jetty.alpn.version>
                <bootcp>-Xbootclasspath/p:${jetty.alpn.path}</bootcp>
